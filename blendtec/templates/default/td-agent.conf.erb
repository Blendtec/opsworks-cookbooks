## match tag=debug.** and dump to console
<match debug.**>
  type stdout
</match>

####
## Apache Access Source:
##
<source>
  type tail
  format apache2
  path /var/log/apache/access.log
  pos_file /var/log/td-agent/apache.access_log.pos
  tag apache.access
</source>

####
## Log Apache Access to S3
##
<match apache.access>
  type s3
  aws_key_id <%= @key %>
  aws_sec_key <%= @secret %>
  s3_bucket <%= @bucket %>
  s3_endpoint <%= @s3_end_point %>
  path logs/
  s3_object_key_format %{path}access/%{hostname}/apache/ts=%{time_slice}/access_%{index}.%{file_extension}
  buffer_path /var/log/td-agent/s3.apache.access
  time_slice_format %Y%m%d%H%M
  time_slice_wait 1m
  utc
  buffer_chunk_limit 256m
</match>

####
## Apache Error Source:
##
<source>
  type tail
  format /^\[[^ ]* (?<time>[^\]]*)\] \[(?<level>[^\]]*)\] (?<message>.*)$/
  path /var/log/apache2/error.log
  pos_file /var/log/td-agent/apache.error_log.pos
  tag apache.error
</source>

